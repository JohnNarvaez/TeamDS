
@page
@model VeterinariaGato.App.Frontend.Pages.ListModel
@{
}


<h1>Listado de Gatos</h1>
<form method="get">
    <div class="form-group">

        <p>
            Gatos: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    
    @foreach (var gato in Model.Gatos)
    {
        <tr>
            
            <td>@gato.Codigo</td>
            <td>@gato.Nombre</td>
            <td>@gato.Raza</td>
            <td>@gato.Color</td>
            <td>@gato.Edad</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-gatoCodigo="@gato.Codigo">
                    <i class="fas fa-info-circle fa-lg"></i> Detalle Gato 
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-gatoCodigo="@gato.Codigo">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar Gato
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar Gato</a>
        <label asp-for="Gato.Color"></label>
        <input asp-for="Gato.Color" class="form-control">
        <span class="text-danger" asp-validation-for="Gato.Color"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gato.Edad"></label>

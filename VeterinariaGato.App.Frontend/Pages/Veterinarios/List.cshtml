@page
@model VeterinariaGato.App.Frontend.Pages.ListModelVeterinarios
@{
}

<h1>Veterinarios</h1>
<form method="get">
    <div class="form-group">

        <p>
            Veterinarios: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>Nombre</td>
        <td>Apellidos</td>
        <td>Telefono</td>
        <td>Genero</td>
        <td>Especialidad</td>
        <td>Codigo</td>
        <td>Registro</td>
    </tr>
    
    @foreach (var veterinario in Model.Veterinarios)
    {
        <tr>
            
            <td>@veterinario.Id</td>
            <td>@veterinario.Nombre</td>
            <td>@veterinario.Apellidos</td>
            <td>@veterinario.NumeroTelefono</td>
            <td>@veterinario.Genero</td>
            <td>@veterinario.Especialidad</td>
            <td>@veterinario.Codigo</td>
            <td>@veterinario.Registro</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-veterinarioId="@veterinario.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-veterinarioId="@veterinario.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>

@page
@model VeterinariaGato.App.Frontend.Pages.ListModelPropietarios
@{
}

<h1>Propietarios</h1>
<form method="get">
    <div class="form-group">

        <p>
            Propietarios: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>Nombre</td>
        <td>Apellidos</td>
        <td>Telefono</td>
        <td>Genero</td>
        <td>Correo</td>
        
    </tr>
    
    @foreach (var propietario in Model.Propietarios)
    {
        <tr>
            
            <td>@propietario.Id</td>
            <td>@propietario.Nombre</td>
            <td>@propietario.Apellidos</td>
            <td>@propietario.NumeroTelefono</td>
            <td>@propietario.Genero</td>
            <td>@propietario.Correo</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-PropietarioId="@propietario.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-PropietarioId="@propietario.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar 
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>

@page
@model VeterinariaGato.App.Frontend.Pages.ListModelo
@{
}


<h1>Personas</h1>
<form method="get">
    <div class="form-group">

        <p>
            Personas: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>

<table class="table">
    <tr>
        <td>Id  </td>
        <td>Nombre</td>
        <td>Apellidos</td>
        <td>Telefono</td>
        <td>Genero</td>
    </tr>
    
    @foreach (var persona in Model.Personas)
    {
        <tr>
            <td>@persona.Id</td>
            <td>@persona.Nombre</td>
            <td>@persona.Apellidos</td>
            <td>@persona.NumeroTelefono</td>
            <td>@persona.Genero</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-personaId="@persona.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-personaId="@persona.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar 
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>
@page
@model VeterinariaGato.App.Frontend.Pages.ListModelSignosVitales
@{
}

<h1>Signos Vitales</h1>
<form method="get">
    <div class="form-group">

        <p>
            SignosVitales: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>FechaHora</td>
        <td>Signo</td>
        <td>Valor</td>
    </tr>
    
    @foreach (var signoV in Model.SignosVitales)
    {
        <tr>
            
            <td>@signoV.Id</td>
            <td>@signoV.FechaHora</td>
            <td>@signoV.Signo</td>
            <td>@signoV.Valor</td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-SignoVitalId="@signoV.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-SignoVitalId="@signoV.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>

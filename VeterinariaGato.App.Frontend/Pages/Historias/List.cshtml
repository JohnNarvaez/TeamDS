@page
@model VeterinariaGato.App.Frontend.Pages.ListModelHistorias
@{
}


<h1>Historias</h1>
<form method="get">
    <div class="form-group">

        <p>
            Personas: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>Diagnostico</td>
        <td>Entorno</td>
        <td>Sug_cuidado</td>
        
    </tr>
    
    @foreach (var historia in Model.Historias)
    {
        <tr>
            
            <td>@historia.Id</td>
            <td>@historia.Diagnostico</td>
            <td>@historia.Entorno</td>
            <td>@historia.SugerenciaCuidado_id</td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-HistoriaId="@historia.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-HistoriaId="@historia.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>

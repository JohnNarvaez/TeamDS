@{
}

<h1>Sugerencia Cuidados</h1>
<form method="get">
    <div class="form-group">

        <p>
            SugerenciaCuidados: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>FechaHora</td>
        <td>Descripci√≥n</td>
    </tr>
    
    @foreach (var sugerenciaC in Model.SugerenciaCuidados)
    {
        <tr>
            
            <td>@sugerenciaC.SugeCuidadoId</td>
            <td>@sugerenciaC.FechaHora</td>
            <td>@sugerenciaC.Descripcion</td>
        
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-SugeCuidadoId="@sugerenciaC.SugeCuidadoId">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-SugeCuidadoId="@sugerenciaC.SugeCuidadoId">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>

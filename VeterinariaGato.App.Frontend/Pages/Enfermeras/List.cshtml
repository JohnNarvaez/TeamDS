@page
@model VeterinariaGato.App.Frontend.Pages.ListModelEnfermeras
@{
}

<h1>Enfermeras</h1>
<form method="get">
    <div class="form-group">

        <p>
            Enfermeras: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Id  </td>
        <td>Nombre</td>
        <td>Apellidos</td>
        <td>Telefono</td>
        <td>Genero</td>
        <td>Tarjeta_P</td>
        <td>H_laboradas</td>
    </tr>
    
    @foreach (var enfermera in Model.Enfermeras)
    {
        <tr>
            
            <td>@enfermera.Id</td>
            <td>@enfermera.Nombre</td>
            <td>@enfermera.Apellidos</td>
            <td>@enfermera.NumeroTelefono</td>
            <td>@enfermera.Genero</td>
            <td>@enfermera.TarjetaProfecional</td>
            <td>@enfermera.HorasLaboradas</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-EnfermeraId="@enfermera.Id">
                    <i class="fas fa-info-circle fa-lg"></i> Detalles
                </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-EnfermeraId="@enfermera.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i> Editar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar</a>
